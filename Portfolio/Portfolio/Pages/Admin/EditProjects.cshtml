@page "{id?}"

@model Portfolio.Pages.Admin.EditProjectsModel


@{
    Layout = "_Layout";
    ViewData["Title"] = "EditProjects";
}

<h2>Edit Projects</h2>

@*double check this piece*@
<form method="post">
    <div class="form-group">
        <label asp-for="Project.Title" class="col-md-2" control-label></label>
        <input asp-for="Project.Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Project.Description" class="col-md-3" control-label> </label>
        <textarea rows="5" asp-for="Project.Description" class="form-control">  </textarea>
    </div>

    <div class="form-group">
        <label asp-for="Project.Technologies" class="col-md-2" control-label> </label>
        <textarea rows="5" asp-for="Project.Technologies" class="form-control">  </textarea>
    </div>

    <div class="form-group">
        <label asp-for="Image" class="col-md-2" contrl-label> </label>
        <input type="file" asp-for="Image"/>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <button type="submit" asp-page-handler="Delete" class="btn btn-primary">Delete</button>

</form>

