@page "{id}"


@{
    Layout = "_Layout";
    var id = int.Parse((string)RouteData.Values["id"]);
    var projects = await ProjectsService.FindAsync(id);
}

<h2>Edit!</h2>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="col-md-12">
                <span>
                    @projects.Description
                </span>
            </div>
        </div>

        <div class="col-md-4">
            @if(projects.Image != null)
            {
                <img class="img-fluid img-thumbnail" src="@projects.GetInlineImageSrc()" />

            }
            else
            {
                <img class="img-fluid img-thumbnail" src="@projects.ImageUrl" />

            }

        </div>
    </div>
            @if(User.Identity.IsAuthenticated)
            {
                <a asp-page="/Admin/EditProjects" class="btn btn-primary" asp-route-id="@projects.ID">Edit @projects.Title</a>
            }
</div>
